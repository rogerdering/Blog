doctype html
html
	head
		script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
	body
		h1= user.name
		h2= user.email

		a(href='/all') view all posts
		br
		a(href='/posts') view your posts
		br
		a(href='/logout') log out
		br
		h2 Post something
		div
			form(action='/post',method='post')
				div(data-role='fieldcontain')
					fieldset(data-role='controlgroup')
						label(for='title') Title: 
							input(id='title',type='text',value='',placeholder='',name='title')
				div(data-role='fieldcontain')
					fieldset(data-role='controlgroup')
						label(for='body') Body: 
							input(id='body',type='text',value='',placeholder='',name='body')
				div(data-role='fieldcontain')   
					input(type='submit',value='Add',data-transition='fade', data-theme='c')