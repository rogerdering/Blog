doctype html
html
	head
		script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
	body
		h1= post.title
		h2= post.body
		h2 posted by
		h2= post.author
		div
			each comment in comments
				h3= comment.title
				p= comment.body
				p posted by:
				p= comment.author
				
		h2 Write a comment
		div
			form(action='/comment',method='post')
				div(data-role='fieldcontain')
					fieldset(data-role='controlgroup')
						label(for='title') Title: 
							input(id='title',type='text',value='',placeholder='',name='title')
				div(data-role='fieldcontain')
					fieldset(data-role='controlgroup')
						label(for='body') Body: 
							input(id='body',type='text',value='',placeholder='',name='body')
				div(data-role='fieldcontain')   
					input(type='submit',value='Add',data-transition='fade', data-theme='c')